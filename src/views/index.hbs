<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-tittle text-white">
            <i class="far fa-image"></i> Carga una imagen
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroup"
                            aria-describedby="inputGroupFileAddon" required>
                        <label class="custom-file-label" for="inputGroupFile">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Título para la imágen">
            </div>
            <div class="form-group">
                <textarea name="description" rows="2" class="form-control" placeholder="Descripción de imágen"
                    required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload mr-2"></i>Subir imágen
                </button>
            </div>
        </form>
    </div>
</div>

<div class="ca mt-2">
    <div class="card-header bg-dark text-white">
        <h3><i class="far fa-images"></i> Imágenes recientes</h3>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each images}}
            <div class="col-md-4">
                <a href="/images/{{uniqueId}}">
                    <img src="/public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail">
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</div>